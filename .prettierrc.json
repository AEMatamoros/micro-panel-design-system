{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "always",
    "trailingComma": "none",
    "plugins": ["prettier-plugin-tailwindcss"],
    "tailwindAttributes": ["clsx", "cn", "twmerge", "cva"],
    "tailwindFunctions": ["clsx", "cn", "twmerge", "cva"]
}
